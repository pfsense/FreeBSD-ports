PORTNAME=	Box2D
DISTVERSIONPREFIX=	v
DISTVERSION=	2.4.1
CATEGORIES=	misc

MAINTAINER=	yuri@FreeBSD.org
COMMENT=	2D physics engine for games
WWW=		https://box2d.org/

LICENSE=	MIT
LICENSE_FILE=	${WRKSRC}/LICENSE

USES=		cmake compiler:c++11-lang pkgconfig
USE_LDCONFIG=	yes

USE_GITHUB=	yes
GH_ACCOUNT=	erincatto
GH_PROJECT=	box2d

CMAKE_ON=	BOX2D_INSTALL BUILD_SHARED_LIBS
CMAKE_OFF=	BOX2D_BUILD_STATIC BOX2D_BUILD_UNIT_TESTS BOX2D_BUILD_TESTBED BOX2D_BUILD_EXAMPLES

do-test:
	@cd ${BUILD_WRKSRC} && \
		${SETENV} ${CONFIGURE_ENV} ${CMAKE_BIN} ${CMAKE_ARGS} -DBOX2D_BUILD_UNIT_TESTS:BOOL=ON ${CMAKE_SOURCE_PATH} && \
		${SETENV} ${MAKE_ENV} ${MAKE_CMD} ${MAKE_ARGS} ${ALL_TARGET} && \
		${BUILD_WRKSRC}/bin/unit_test

.include <bsd.port.mk>
