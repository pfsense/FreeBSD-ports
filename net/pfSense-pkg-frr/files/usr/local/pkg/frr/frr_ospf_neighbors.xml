	<adddeleteeditpagefields>
		<columnitem>
			<fielddescr>Neighbor</fielddescr>
			<fieldname>neighbor</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Priority</fielddescr>
			<fieldname>priority</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Polling Interval</fielddescr>
			<fieldname>pollinginterval</fieldname>
		</columnitem>
	</adddeleteeditpagefields>
	<fields>
		<field>
			<name>OSPF Neighbors</name>
			<type>listtopic</type>
		</field>
		<field>
			<fielddescr></fielddescr>
			<description>
				<![CDATA[
				Define neighbors for "non-broadcast" and "point-to-multipoint" network types.
				]]>
			</description>
			<type>info</type>
		</field>
		<field>
			<fielddescr>OSPF Neighbor IPv4 Address</fielddescr>
			<fieldname>neighbor</fieldname>
			<size>30</size>
			<type>input</type>
			<required/>
		</field>
		<field>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
			<size>30</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr>Neighbor Priority</fielddescr>
			<fieldname>priority</fieldname>
			<description>(0-255) Priority</description>
			<size>30</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr>Dead Neighbor Polling interval</fielddescr>
			<fieldname>pollinginterval</fieldname>
			<description>(1-65535) Seconds</description>
			<size>30</size>
			<type>input</type>
		</field>
	</fields>
	<custom_delete_php_command>
		frr_generate_config();
	</custom_delete_php_command>
	<custom_php_resync_config_command>
		frr_generate_config();
	</custom_php_resync_config_command>
	<custom_php_validation_command>
		frr_ospf_neighbors_validate_input();
	</custom_php_validation_command>
