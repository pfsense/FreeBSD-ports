		<tab>
			<text>OSPF</text>
			<url>pkg_edit.php?xml=frr/frr_ospf.xml</url>
		</tab>
		<tab>
			<text>Areas</text>
			<url>pkg.php?xml=frr/frr_ospf_areas.xml</url>
