	<adddeleteeditpagefields>
		<columnitem>
			<fielddescr>Name</fielddescr>
			<fieldname>name</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
		</columnitem>
	</adddeleteeditpagefields>
	<fields>
		<field>
			<fielddescr>Name</fielddescr>
			<fieldname>name</fieldname>
			<description>
				<![CDATA[
				The name of this AS Path List.
				]]>
			</description>
			<type>input</type>
			<size>20</size>
			<required/>
		</field>
		<field>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
			<size>50</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr></fielddescr>
			<description>
				<![CDATA[
				AS Path entries determine if networks are allowed or denied in specific contexts used in BGP route maps.
				<br />
				Order is important. Use the sequence field to reorder entries after saving.
				<br />
				The regular expression will match on the AS number and is surrounded by underscores (e.g. "_65534_"). Use "^" to match any.
				]]>
			</description>
			<type>info</type>
		</field>
		<field>
			<fielddescr>AS Path Entres</fielddescr>
			<fieldname>none</fieldname>
			<type>rowhelper</type>
			<rowhelper>
				<rowhelperfield>
					<fielddescr>Sequence</fielddescr>
					<fieldname>seq</fieldname>
					<type>input</type>
					<size>5</size>
				</rowhelperfield>
				<rowhelperfield>
					<fielddescr>Action</fielddescr>
					<fieldname>action</fieldname>
					<description>Permit or deny access to a network.</description>
					<type>select</type>
					<default_value>Deny</default_value>
					<options>
						<option><name>Deny</name><value>deny</value></option>
						<option><name>Permit</name><value>permit</value></option>
					</options>
				</rowhelperfield>
				<rowhelperfield>
					<fielddescr>Regular Expression</fielddescr>
					<fieldname>regex</fieldname>
					<type>input</type>
					<size>25</size>
				</rowhelperfield>
			</rowhelper>
		</field>
	</fields>
