	<aftersaveredirect>pkg.php?xml=frr/frr_rip_interfaces.xml</aftersaveredirect>
	<tabs>
		<tab>
			<text>RIP</text>
			<url>pkg_edit.php?xml=frr/frr_rip.xml</url>
		</tab>
		<tab>
			<text>Interfaces</text>
			<url>pkg.php?xml=frr/frr_rip_interfaces.xml</url>
			<active/>
		</tab>
