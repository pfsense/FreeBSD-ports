	<adddeleteeditpagefields>
		<columnitem>
			<fielddescr>DNS Group Name</fielddescr>
			<fieldname>aliasname</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>DNS Group Description</fielddescr>
			<fieldname>description</fieldname>
		</columnitem>
		<columnitem>
