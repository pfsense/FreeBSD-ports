#!/bin/sh

# PROVIDE: slpd
# REQUIRE: DAEMON
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf to enable slpd:
#
# slpd_enable="YES"
#

slpd_enable=${slpd_enable-"NO"}
slpd_flags=${slpd_flags-"-p /var/run/slpd.pid"}

. /etc/rc.subr

name=slpd
rcvar=slpd_enable

command=%%PREFIX%%/sbin/slpd
pidfile="/var/run/${name}.pid"

load_rc_config ${name}
run_rc_command "$1"
