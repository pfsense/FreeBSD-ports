		freeradius_sqlconf_resync();
	</custom_delete_php_command>
	<custom_php_resync_config_command>
		freeradius_sqlconf_resync();
	</custom_php_resync_config_command>
	<custom_php_validation_command>
		freeradius_validate_sql($_POST, $input_errors);
	</custom_php_validation_command>
</packagegui>
