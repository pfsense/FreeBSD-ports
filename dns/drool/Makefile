USES=		pkgconfig
GNU_CONFIGURE=	yes
USE_LDCONFIG=	yes
CPPFLAGS+=	$$(pkg-config libev --cflags-only-I)
LDFLAGS+=	$$(pkg-config libev --libs-only-L)

OPTIONS_DEFINE=	DOCS

