PORTNAME=	Translation2
PORTVERSION=	2.0.4
PORTEPOCH=	1
CATEGORIES=	sysutils devel pear

MAINTAINER=	sunpoet@FreeBSD.org
COMMENT=	PEAR class for multilingual applications management
WWW=		https://pear.php.net/package/Translation2

USES=		pear shebangfix

NO_ARCH=	yes

SHEBANG_FILES=	scripts/t2xmlchk.php

OPTIONS_DEFINE=	PEAR_CACHE_LITE PEAR_DB PEAR_DB_DATAOBJECT PEAR_FILE_GETTEXT PEAR_I18NV2 PEAR_MDB PEAR_MDB2 PEAR_XML_SERIALIZER
PEAR_CACHE_LITE_DESC=	PEAR::Cache_Lite support
PEAR_DB_DESC=		PEAR::DB support
PEAR_DB_DATAOBJECT_DESC=PEAR::DB_DataObject support
PEAR_FILE_GETTEXT_DESC=	PEAR::File_Gettext support
PEAR_I18NV2_DESC=	PEAR::I18Nv2 support
PEAR_MDB_DESC=		PEAR::MDB support
PEAR_MDB2_DESC=		PEAR::MDB2 support
PEAR_XML_SERIALIZER_DESC=	PEAR::XML_Serializer support

PEAR_CACHE_LITE_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}Cache_Lite>=0:sysutils/pear-Cache_Lite@${PHP_FLAVOR}
PEAR_DB_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}DB>=0:databases/pear-DB@${PHP_FLAVOR}
PEAR_DB_DATAOBJECT_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}DB_DataObject>=0:databases/pear-DB_DataObject@${PHP_FLAVOR}
PEAR_FILE_GETTEXT_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}File_Gettext>=0:sysutils/pear-File_Gettext@${PHP_FLAVOR}
PEAR_I18NV2_RUN_DEPENDS=${PEAR_PKGNAMEPREFIX}I18Nv2>=0.9.1:sysutils/pear-I18Nv2@${PHP_FLAVOR}
PEAR_MDB_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}MDB>=0:databases/pear-MDB@${PHP_FLAVOR}
PEAR_MDB2_RUN_DEPENDS=	${PEAR_PKGNAMEPREFIX}MDB2>=0:databases/pear-MDB2@${PHP_FLAVOR}
PEAR_XML_SERIALIZER_RUN_DEPENDS=${PEAR_PKGNAMEPREFIX}XML_Serializer>=0.13.0:devel/pear-XML_Serializer@${PHP_FLAVOR}

.include <bsd.port.mk>
