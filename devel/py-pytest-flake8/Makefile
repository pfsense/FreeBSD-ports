RUN_DEPENDS=	${PYTHON_PKGNAMEPREFIX}flake8>=4.0:devel/py-flake8@${PY_FLAVOR} \
		${PYTHON_PKGNAMEPREFIX}pytest>=7.0,1:devel/py-pytest@${PY_FLAVOR}

USES=		python
