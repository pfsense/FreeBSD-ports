			<url>/pkg_edit.php?xml=net-snmptrapd_formats.xml</url>
		</tab>
		<tab>
			<text>Trap Handles</text>
			<url>/pkg.php?xml=net-snmptrapd_traphandles.xml</url>
		</tab>
