		<tab>
			<text>General</text>
			<url>/pkg_edit.php?xml=net-snmptrapd.xml</url>
		</tab>
		<tab>
			<text>Community Auth</text>
			<url>/pkg.php?xml=net-snmptrapd_communities.xml</url>
