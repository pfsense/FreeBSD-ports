.include <bsd.port.pre.mk>

.if ${PYTHON_REL} >= 3400
RUN_DEPENDS+=	${PYTHON_PKGNAMEPREFIX}imageio>=0:graphics/py-imageio@${PY_FLAVOR}
.else
RUN_DEPENDS+=	${PYTHON_PKGNAMEPREFIX}imageio24>=0:graphics/py-imageio24@${PY_FLAVOR}
